<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/dashboard.css">
  <title>Attendance Platform</title>
  <style>
    .alert-box {
      display: none;
      padding: 15px;
      background-color: #dff0d8;
      color: #3c763d;
      border: 1px solid #d6e9c6;
      border-radius: 5px;
      width: 80%;
      margin: 20px auto;
      text-align: center;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <!-- ✅ Notification Toggle -->
  <div class="alert-box" id="alertBox"></div>

  <div>
    <h1 class="head">Employee Attendance Platform</h1>
    <div class="second-div">
      <h1 class="ok2">Employee Details:</h1>
      <h3 class="ok2">Employee Name: <%= name %></h3>
      <h3 class="ok2">
        Employee:
        <form action="/lunchin" method="POST" style="display: inline;">
          <input type="hidden" name="userId" value="<%= userId %>">
          <button class="main1">Lunch In</button>
        </form>
        <form action="/lunchout" method="POST" style="display: inline;">
          <input type="hidden" name="userId" value="<%= userId %>">
          <button class="main2">Lunch Out</button>
        </form>
      </h3>
      <a href="/" class="ok">Logout</a>
    </div>
  </div>

  <!-- ✅ Script to Show Alert if msg param exists -->
  <script>
    const params = new URLSearchParams(window.location.search);
    const msg = params.get('msg');
    const alertBox = document.getElementById('alertBox');

    if (msg) {
      let text = "";
      if (msg === "lunchin") {
        text = "✅ Lunch In marked successfully!";
      } else if (msg === "lunchout") {
        text = "✅ Lunch Out marked successfully!";
      }

      alertBox.innerText = text;
      alertBox.style.display = "block";

      // Hide after 4 seconds
      setTimeout(() => {
        alertBox.style.display = "none";
      }, 4000);
    }
  </script>
</body>
</html>
